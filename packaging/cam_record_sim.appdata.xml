<component type="desktop-application">
  <id>com.github.fasttube.CamRecordSim</id>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>MIT</project_license>
  <name>Camera Record Simulator</name>
  <summary>Record from real and virtual cameras</summary>

  <description>
    <p>
      Camera Record Simulator is a versatile tool for recording video from both
      real USB cameras and virtual simulated cameras. Perfect for testing and
      development without requiring physical camera hardware.
    </p>
    <p>Features:</p>
    <ul>
      <li>Record from real USB cameras</li>
      <li>Two virtual cameras for testing</li>
      <li>Video playback capabilities</li>
      <li>Metadata tracking for recordings</li>
      <li>CLI and GUI interfaces</li>
    </ul>
  </description>

  <launchable type="desktop-id">cam_record_sim.desktop</launchable>

  <screenshots>
    <screenshot type="default">
      <caption>Main application window</caption>
    </screenshot>
